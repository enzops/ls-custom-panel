{
  "main": "dist/app.js",
  "scripts": {
    "start": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "dev": "node .",
    "dev:start": "npm-run-all build copy-views copy-public dev",
    "build": "npm-run-all clean lint tsc",
    "copy-views": "cp -r src/views dist/",
    "copy-public": "cp -r src/public dist/",
    "tsc": "npx tsc",
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/core-js": "^2.5.5",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.2.5",
    "@types/shelljs": "^0.8.12",
    "prisma": "^4.15.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "@prisma/client": "^4.15.0",
    "@types/express": "^4.17.17",
    "bootstrap": "4.6.0",
    "chart.js": "2.9.4",
    "datatables.net-bs4": "1.10.24",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jquery": "3.6.0",
    "jquery.easing": "^1.4.1",
    "jsonwebtoken": "^9.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "shelljs": "^0.8.5",
    "tslint": "^6.1.3"
  }
}
